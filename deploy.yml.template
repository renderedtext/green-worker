apiVersion: v1
kind: Service
metadata:
  name: green-worker
spec:
  type: NodePort
#  type: LoadBalancer
  selector:
    app: green-worker
  ports:
    - protocol: TCP
      port: 4000

---

apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: green-worker
spec:
  replicas: 1
  template:
    metadata:
      name: green-worker-pod
      labels:
        app: green-worker
    spec:
      containers:
      - name: green-worker
        image: ${REPO}:${TAG}
        ports:
        - containerPort: 4000
        livenessProbe:
          httpGet:
            path: /health_check/ping
            port: 4000
          initialDelaySeconds: 10
          periodSeconds: 5
          timeoutSeconds: 3
          failureThreshold: 3
      ${IMAGE_PULL_SECRETS}
